{% extends 'back.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-calendar-plus mr-3"></i>Organiser une Réservation
                    </h1>
                    <p class="text-muted mt-2">Planifiez une nouvelle table pour un client spécifique.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_reservation_index') }}" class="btn btn-outline-secondary shadow-sm" style="border-radius: 10px;">
                        <i class="fa-solid fa-arrow-left mr-2"></i>Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="card card-premium-admin shadow-lg" style="max-width: 800px; margin: 0 auto;">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title text-primary-p font-weight-bold">Paramètres de Réservation</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    {{ include('reservation/_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

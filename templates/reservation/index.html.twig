{% extends 'back.html.twig' %}

{% block title %}Gestion des Réservations{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-calendar-check mr-3"></i>Réservations de Tables
                    </h1>
                    <p class="text-muted mt-2">Planification et suivi des réservations clients pour une gestion optimale.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_reservation_new') }}" class="btn btn-premium-p shadow-sm">
                        <i class="fa-solid fa-plus-circle mr-2"></i>Nouvelle Réservation
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <!-- Reservation Table -->
            <div class="card card-premium-admin shadow-lg">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title font-weight-bold text-dark">Journal des Réservations</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table-premium">
                            <thead>
                                <tr>
                                    <th># ID</th>
                                    <th>Client / Utilisateur</th>
                                    <th>Date prévue</th>
                                    <th>Heure</th>
                                    <th>Status système</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reservation in reservations %}
                                    <tr>
                                        <td>
                                            <span class="font-weight-bold text-muted">#RES-{{ reservation.idRes }}</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm-premium bg-primary-light mr-3">
                                                    {{ reservation.user.username|first|upper }}
                                                </div>
                                                <div>
                                                    <div class="font-weight-bold text-dark">{{ reservation.user.username }}</div>
                                                    <div class="small text-muted">Abonné premium</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-dark font-weight-bold">
                                                <i class="fa-regular fa-calendar-alt mr-2 opacity-50"></i>
                                                {{ reservation.datereser ? reservation.datereser|date('d M Y') : '-' }}
                                            </div>
                                        </td>
                                        <td>
                                            <div class="badge badge-light px-3 py-2" style="border-radius: 8px; font-weight: bold;">
                                                <i class="fa-regular fa-clock mr-2 text-primary-p"></i>
                                                {{ reservation.timereser ? reservation.timereser|date('H:i') : '-' }}
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-success-soft text-success px-3 py-2" style="border-radius: 20px;">
                                                <i class="fa-solid fa-check-circle mr-1"></i> Confirmée
                                            </span>
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group shadow-sm" style="border-radius: 10px; overflow: hidden;">
                                                <a href="{{ path('app_reservation_show', {'idRes': reservation.idRes}) }}" class="btn btn-white btn-sm px-3" title="Détails">
                                                    <i class="fa-solid fa-eye text-info"></i>
                                                </a>
                                                <a href="{{ path('app_reservation_edit', {'idRes': reservation.idRes}) }}" class="btn btn-white btn-sm px-3" title="Modifier">
                                                    <i class="fa-solid fa-pen-to-square text-warning"></i>
                                                </a>
                                                <div class="btn btn-white btn-sm px-2">
                                                    {{ include('reservation/_delete_form.html.twig') }}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fa-solid fa-calendar-xmark fa-3x mb-3 opacity-20"></i>
                                                <p>Aucune réservation enregistrée dans le système.</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.bg-success-soft { background: rgba(0, 242, 96, 0.1); }
.avatar-sm-premium {
    width: 35px;
    height: 35px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: var(--primary);
}
.bg-primary-light { background: rgba(0, 242, 96, 0.1); }
</style>
{% endblock %}


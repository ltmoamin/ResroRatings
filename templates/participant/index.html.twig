{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-users-rectangle mr-3"></i>Gestion des Participants
                    </h1>
                    <p class="text-muted mt-2">Registre des inscriptions et participation aux événements de la plateforme.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_participant_new') }}" class="btn btn-premium-p shadow-sm">
                        <i class="fa-solid fa-plus-circle mr-2"></i>Inscrire un Participant
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <!-- Advanced Participant Table -->
            <div class="card card-premium-admin shadow-lg">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title font-weight-bold text-dark">Journal des Inscriptions</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table-premium">
                            <thead>
                                <tr>
                                    <th># ID</th>
                                    <th>Participant</th>
                                    <th>Événement Cible</th>
                                    <th>Contact / Numéro</th>
                                    <th>Date d'adhésion</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for participant in participants %}
                                    <tr>
                                        <td>
                                            <span class="font-weight-bold text-muted">#PAR-{{ participant.idparticipant }}</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm-premium bg-primary-light mr-3">
                                                    {{ participant.User.username|first|upper }}
                                                </div>
                                                <div>
                                                    <div class="font-weight-bold text-dark">{{ participant.User.username }}</div>
                                                    <div class="small text-muted italic">Membre validé</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-purple-soft text-purple px-3 py-2 mr-2" style="border-radius: 8px;">
                                                    <i class="fa-solid fa-star-of-life mr-2"></i>{{ participant.event.titre }}
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="badge badge-light px-3 py-2" style="border-radius: 10px;">
                                                <i class="fa-solid fa-hashtag mr-1 text-primary-p"></i> {{ participant.numero }}
                                            </div>
                                        </td>
                                        <td>
                                            <div class="text-muted small">
                                                <i class="fa-regular fa-calendar-check mr-2"></i>
                                                {{ participant.datepar ? participant.datepar|date('d M Y') : '-' }}
                                            </div>
                                        </td>
                                        <td class="text-right">
                                            <div class="btn-group shadow-sm" style="border-radius: 10px; overflow: hidden;">
                                                <a href="{{ path('app_participant_show', {'idparticipant': participant.idparticipant}) }}" class="btn btn-white btn-sm px-3" title="Détails">
                                                    <i class="fa-solid fa-eye text-info"></i>
                                                </a>
                                                <a href="{{ path('app_participant_edit', {'idparticipant': participant.idparticipant}) }}" class="btn btn-white btn-sm px-3" title="Modifier">
                                                    <i class="fa-solid fa-pen-to-square text-warning"></i>
                                                </a>
                                                <div class="btn btn-white btn-sm px-2">
                                                    {{ include('participant/_delete_form.html.twig') }}
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="text-muted">
                                                <i class="fa-solid fa-user-slash fa-3x mb-3 opacity-20"></i>
                                                <p>Aucune inscription enregistrée jusqu'à présent.</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.bg-purple-soft { background: rgba(111, 66, 193, 0.1); }
.text-purple { color: #6f42c1; }
.avatar-sm-premium {
    width: 35px;
    height: 35px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: var(--primary);
}
.bg-primary-light { background: rgba(0, 242, 96, 0.1); }
</style>
{% endblock %}

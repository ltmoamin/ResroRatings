{% extends 'front.html.twig' %}

{% block title %}Participer à un Événement - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <span>Événements</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-calendar-star text-figma-green me-3"></i>
            Rejoignez nos Événements
        </h1>
        <p class="page-subtitle">Participez à des soirées thématiques et des dégustations exclusives</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-premium">
                    <div class="mb-4">
                        <h3 class="fw-bold h4">Inscription à l'événement</h3>
                        <p class="text-muted small">Veuillez confirmer vos coordonnées pour participer.</p>
                    </div>

                    {{ include('participant/_form.html.twig') }}

                    <div class="mt-4 text-center">
                        <a href="{{ path('home_Front') }}" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left me-1"></i>
                            Retour à l'accueil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'front.html.twig' %}

{% block title %}Modifier Profil - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <a href="{{ path('app_user_show44') }}">Profil</a> / <span>Modifier</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-user-pen text-figma-green me-3"></i>
            Modifier mon Profil
        </h1>
        <p class="page-subtitle">Mettez à jour vos informations personnelles</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-premium">
                    {{ include('user/formedit.html.twig', {'button_label': 'Enregistrer les modifications'}) }}
                    
                    <div class="text-center mt-4 pt-4 border-top">
                        <p class="mb-0">
                            {% if app.user and app.user.resetToken is not empty %}
                                <a href="{{ path('app_reset_password', {'token': app.user.resetToken}) }}" class="btn-outline-premium btn-sm-premium">
                                    <i class="fa-solid fa-key me-2"></i>
                                    Changer mon mot de passe
                                </a>
                            {% else %}
                                <a href="{{ path('generate_and_redirect') }}" class="btn-outline-premium btn-sm-premium">
                                    <i class="fa-solid fa-key me-2"></i>
                                    Générer et changer le mot de passe
                                </a>
                            {% endif %}
                        </p>
                        <div class="mt-3">
                            <a href="{{ path('app_user_show44') }}" class="text-muted text-decoration-none small">
                                <i class="fa-solid fa-arrow-left me-1"></i>
                                Annuler et retourner au profil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

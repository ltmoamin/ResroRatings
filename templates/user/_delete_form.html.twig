<form method="post" action="{{ path('app_user_delete', {'iduser': user.iduser}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.iduser) }}">
    <button class="btn-danger-premium">
        <i class="fa-solid fa-trash-can me-2"></i> Supprimer le compte
    </button>
</form>

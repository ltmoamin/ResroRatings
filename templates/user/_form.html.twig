        <div class="mb-4">
            {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'small font-weight-bold ml-1 mb-2'}}) }}
            <div class="input-group-premium">
                <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                {{ form_widget(form.username, {'attr': {'class': 'form-control form-control-premium' ~ (form.username.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Username'}}) }}
            </div>
            {% if form.username.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block mt-2 ml-1">
                    {{ form_errors(form.username)|join(', ')|raw }}

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'premium-form'}}) }}
<div class="row">
    <div class="col-md-12">
        <label class="small font-weight-bold ml-1 mb-2">Contenu de la réponse</label>
        <div class="input-group input-group-premium mb-4">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-solid fa-pen-nib"></i></span>
            </div>
            {{ form_widget(form.contenue, {'attr': {'class': 'form-control form-control-premium', 'placeholder': 'Rédigez votre réponse ici...', 'rows': '6'}}) }}
        </div>
        {% if form_errors(form.contenue) %}
            <div class="alert alert-danger-soft animate__animated animate__fadeInUp mb-4">{{ form_errors(form.contenue) }}</div>
        {% endif %}

        <label class="small font-weight-bold ml-1 mb-2">Détails temporels</label>
        <div class="input-group input-group-premium mb-4">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-solid fa-clock"></i></span>
            </div>
            {{ form_widget(form.daterep, {'attr': {'class': 'form-control form-control-premium'}}) }}
        </div>
        {% if form_errors(form.daterep) %}
            <div class="alert alert-danger-soft animate__animated animate__fadeInUp mb-4">{{ form_errors(form.daterep) }}</div>
        {% endif %}
    </div>
</div>

<hr class="my-4 opacity-5">

<div class="d-flex justify-content-between align-items-center mt-4">
    <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary px-4 shadow-sm" style="border-radius: 10px;">
        <i class="fa-solid fa-arrow-left mr-2"></i>Retour
    </a>
    <button type="submit" class="btn btn-premium-p px-5">
        <i class="fa-solid fa-paper-plane mr-2"></i>{{ button_label|default('Envoyer la Réponse') }}
    </button>
</div>
{{ form_end(form) }}
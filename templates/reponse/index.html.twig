{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-reply-all mr-3"></i>Journal des Réponses
                    </h1>
                    <p class="text-muted mt-2">Suivi historique de toutes les interactions SAV et réponses formulées.</p>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="card card-premium-admin shadow-lg">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title font-weight-bold">Archive des Réponses</h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table-premium">
                            <thead>
                                <tr>
                                    <th># ID</th>
                                    <th>Contenu de la Réponse</th>
                                    <th>Date d'envoi</th>
                                    <th class="text-right">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for reponse in reponses %}
                                <tr>
                                    <td>
                                        <span class="font-weight-bold text-muted">#{{ reponse.idrep }}</span>
                                    </td>
                                    <td>
                                        <div class="small text-dark font-weight-bold" style="max-width: 400px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                            {{ reponse.contenue }}
                                        </div>
                                        <div class="small text-muted italic">Message de courtoisie</div>
                                    </td>
                                    <td>
                                        <div class="text-muted">
                                            <i class="fa-regular fa-calendar-check mr-2 text-primary-p"></i>
                                            {{ reponse.daterep ? reponse.daterep|date('d M Y') : '-' }}
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group shadow-sm" style="border-radius: 10px; overflow: hidden;">
                                            <a href="{{ path('app_reponse_show', {'idrep': reponse.idrep}) }}" class="btn btn-white btn-sm px-3" title="Voir">
                                                <i class="fa-solid fa-eye text-info"></i>
                                            </a>
                                            <a href="{{ path('app_reponse_edit', {'idrep': reponse.idrep}) }}" class="btn btn-white btn-sm px-3" title="Modifier">
                                                <i class="fa-solid fa-pen text-warning"></i>
                                            </a>
                                            <div class="btn btn-white btn-sm px-2">
                                                {{ include('reponse/_delete_form.html.twig') }}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="text-muted">
                                            <i class="fa-solid fa-comment-slash fa-3x mb-3 opacity-20"></i>
                                            <p>Aucun historique de réponse disponible.</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
 
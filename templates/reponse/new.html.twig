{% extends 'back.html.twig' %}

{% block title %}Nouvelle Réponse{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-reply mr-3"></i>Rédiger une Réponse
                    </h1>
                    <p class="text-muted mt-2">Formulez une réponse officielle pour clore ce dossier de réclamation.</p>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="card card-premium-admin shadow-lg" style="max-width: 900px; margin: 0 auto;">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title text-primary-p font-weight-bold">Édition du message</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    {{ include('reponse/_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

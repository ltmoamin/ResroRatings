{% extends 'front.html.twig' %}

{% block title %}Nouveau Badge - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <a href="{{ path('app_badge_indexFront') }}">Badges</a> / <span>Ajouter</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-plus-circle text-figma-green me-3"></i>
            Attribuer un Badge
        </h1>
        <p class="page-subtitle">Récompensez un restaurant pour son service exceptionnel ou ses bons plats</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-premium">
                    <div class="mb-4">
                        <h3 class="fw-bold h4">Détails du badge</h3>
                        <p class="text-muted small">Choisissez le restaurant et le type de distinction à lui accorder.</p>
                    </div>

                    {{ include('badge/_form.html.twig') }}

                    <div class="mt-4 text-center">
                        <a href="{{ path('app_badge_indexFront') }}" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left me-1"></i> Retour aux badges
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

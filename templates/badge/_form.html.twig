{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'premium-form'}}) }}
<div class="row">
    <div class="col-md-12">
        <label class="small font-weight-bold ml-1 mb-2">Restaurant associé</label>
        <div class="input-group input-group-premium mb-4">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-solid fa-store"></i></span>
            </div>
            {{ form_widget(form.restaurant, {'attr': {'class': 'form-control form-control-premium'}}) }}
        </div>
        {% if form_errors(form.restaurant) %}
            <div class="alert alert-danger-soft mb-4">{{ form_errors(form.restaurant) }}</div>
        {% endif %}
    </div>

    <div class="col-md-12">
        <label class="small font-weight-bold ml-1 mb-2">Type de Badge (Privilège)</label>
        <div class="input-group input-group-premium mb-4">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa-solid fa-id-badge"></i></span>
            </div>
            {{ form_widget(form.typebadge, {'attr': {'class': 'form-control form-control-premium'}}) }}
        </div>
        {% if form_errors(form.typebadge) %}
            <div class="alert alert-danger-soft mb-4">{{ form_errors(form.typebadge) }}</div>
        {% endif %}
    </div>

    <div class="col-12">
        <label class="small font-weight-bold ml-1 mb-2">Note Administrative / Commentaire</label>
        <div class="form-group mb-4">
            {{ form_widget(form.commantaire, {'attr': {'class': 'form-control-premium', 'placeholder': 'Justification du badge ou instructions spécifiques...', 'rows': '4'}}) }}
        </div>
        {% if form_errors(form.commantaire) %}
            <div class="alert alert-danger-soft mb-4">{{ form_errors(form.commantaire) }}</div>
        {% endif %}
    </div>
</div>

<div class="d-flex justify-content-end mt-4">
    <button type="submit" class="btn btn-premium-p px-5 py-2 shadow-sm">
        <i class="fa-solid fa-check-circle mr-2"></i>{{ button_label|default('Enregistrer le Badge') }}
    </button>
</div>
{{ form_end(form) }}

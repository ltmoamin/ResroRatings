{% extends 'back.html.twig' %}

{% block title %}Détails Restaurant{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-shop mr-3"></i>Détails du Restaurant
                    </h1>
                    <p class="text-muted mt-2">Consultez les informations complètes de l'établissement professionnel.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_restaurant_index') }}" class="btn btn-outline-secondary shadow-sm mr-2" style="border-radius: 10px;">
                        <i class="fa-solid fa-arrow-left mr-2"></i>Retour
                    </a>
                    <a href="{{ path('app_restaurant_pdf', {'id_restau': restaurant.idRestau})}}" class="btn btn-premium-p mr-2 shadow-sm">
                        <i class="fa-solid fa-file-pdf mr-2"></i>Exporter PDF
                    </a>
                    <a href="{{ path('app_restaurant_edit', {'id_restau': restaurant.idRestau}) }}" class="btn btn-warning shadow-sm" style="border-radius: 10px; font-weight: bold; color: #fff;">
                        <i class="fa-solid fa-pen-to-square mr-2"></i>Modifier
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-premium-admin shadow-lg border-0">
                        <div class="card-body text-center py-5">
                            <div class="avatar-lg mx-auto mb-4 bg-primary-light rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 120px; height: 120px; border: 4px solid var(--white);">
                                <i class="fa-solid fa-utensils fa-4x text-primary-p"></i>
                            </div>
                            <h3 class="font-weight-bold text-dark mb-1">{{ restaurant.nom }}</h3>
                            <div class="badge badge-premium-pulse mb-3">Actif / Premium</div>
                            <p class="text-muted small">
                                <i class="fa-solid fa-location-dot mr-2 text-primary-p"></i>{{ restaurant.location }}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card card-premium-admin h-100 shadow-lg border-0">
                        <div class="card-header border-0 bg-transparent">
                            <h3 class="card-title text-primary-p font-weight-bold">
                                <i class="fa-solid fa-circle-info mr-2"></i>Informations Administratives
                            </h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-premium-detail mb-0">
                                    <tbody>
                                        <tr>
                                            <th class="pl-4 py-4" style="width: 35%; border-top: 0; background: rgba(0,0,0,0.02);">ID Interne de l'établissement</th>
                                            <td class="py-4 font-weight-bold text-dark" style="border-top: 0;">#{{ restaurant.idRestau }}</td>
                                        </tr>
                                        <tr>
                                            <th class="pl-4 py-4" style="background: rgba(0,0,0,0.02);">Nom du Restaurant</th>
                                            <td class="py-4 text-dark">{{ restaurant.nom }}</td>
                                        </tr>
                                        <tr>
                                            <th class="pl-4 py-4" style="background: rgba(0,0,0,0.02); border-bottom: 0;">Localisation / Adresse Physique</th>
                                            <td class="py-4 text-dark" style="border-bottom: 0;">
                                                <span class="badge badge-light p-2" style="font-size: 14px; border-radius: 8px;">
                                                    <i class="fa-solid fa-map-pin mr-2 text-primary-p"></i>{{ restaurant.location }}
                                                </span>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer bg-light border-top-0 d-flex justify-content-between align-items-center px-4 py-3">
                            <p class="mb-0 text-muted small"><i class="fa-solid fa-clock mr-1"></i> Dernière mise à jour: Aujourd'hui</p>
                            <div class="btn-group">
                                {{ include('restaurant/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.table-premium-detail th {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text-secondary);
    vertical-align: middle;
}
.table-premium-detail td {
    font-size: 1.05rem;
    vertical-align: middle;
}
</style>
{% endblock %}

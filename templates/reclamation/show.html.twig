{% extends 'back.html.twig' %}

{% block title %}Détails Réclamation{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-circle-exclamation mr-3"></i>Détails de la Réclamation
                    </h1>
                    <p class="text-muted mt-2">Dossier complet de l'incident client et suivi de l'état de résolution.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary shadow-sm mr-2" style="border-radius: 10px;">
                        <i class="fa-solid fa-arrow-left mr-2"></i>Retour
                    </a>
                    <a href="{{ path('app_reclamation_answer', {'idrec': reclamation.idrec}) }}" class="btn btn-warning shadow-sm" style="border-radius: 10px; font-weight: bold; color: #fff;">
                        <i class="fa-solid fa-reply mr-2"></i>Répondre
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="row">
                <div class="col-md-4">
                    <div class="card card-premium-admin shadow-lg border-0 h-100">
                        <div class="card-header border-0 bg-transparent">
                            <h3 class="card-title text-dark font-weight-bold">Statut & Classification</h3>
                        </div>
                        <div class="card-body">
                            <div class="status-box mb-4">
                                <label class="small text-muted d-block text-uppercase letter-spacing-1 mb-2">État de traitement</label>
                                {% if reclamation.etatrec == 'resolue' %}
                                    <div class="alert alert-success-soft d-flex align-items-center mb-0" style="border-radius: 12px; border: 1px solid rgba(0,242,96,0.2);">
                                        <i class="fa-solid fa-check-circle mr-3 fa-lg"></i>
                                        <span class="font-weight-bold">Dossier Résolu</span>
                                    </div>
                                {% elseif reclamation.etatrec == 'en_attente' %}
                                    <div class="alert alert-warning-soft d-flex align-items-center mb-0" style="border-radius: 12px; border: 1px solid rgba(255,193,7,0.2);">
                                        <i class="fa-solid fa-hourglass-half mr-3 fa-lg"></i>
                                        <span class="font-weight-bold">En cours d'étude</span>
                                    </div>
                                {% else %}
                                    <div class="alert alert-secondary-soft d-flex align-items-center mb-0" style="border-radius: 12px;">
                                        <span class="font-weight-bold">{{ reclamation.etatrec|capitalize }}</span>
                                    </div>
                                {% endif %}
                            </div>
                            
                            <div class="info-item mb-4">
                                <label class="small text-muted d-block text-uppercase letter-spacing-1 mb-2">Catégorie du problème</label>
                                <div class="d-flex align-items-center p-3 bg-light rounded" style="border: 1px solid rgba(0,0,0,0.05);">
                                    <div class="icon-circle-sm bg-primary-light text-primary-p mr-3"><i class="fa-solid fa-tags"></i></div>
                                    <span class="text-dark font-weight-bold">{{ reclamation.typerec }}</span>
                                </div>
                            </div>

                            <div class="info-item">
                                <label class="small text-muted d-block text-uppercase letter-spacing-1 mb-2">Référence Dossier</label>
                                <div class="p-2 border rounded text-center font-weight-bold text-muted bg-white">
                                    REC-{{ reclamation.idrec }}-PROT
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card card-premium-admin shadow-lg border-0 h-100">
                        <div class="card-header border-0 bg-transparent">
                            <h3 class="card-title text-primary-p font-weight-bold">
                                <i class="fa-solid fa-envelope-open-text mr-2"></i>Contenu du message client
                            </h3>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="complaint-text p-4 rounded mb-4 flex-grow-1" style="background: var(--gray-50); border: 1px solid rgba(0,0,0,0.05); font-size: 1.1rem; line-height: 1.8; color: #444;">
                                {{ reclamation.description }}
                            </div>
                            <div class="d-flex justify-content-between align-items-center border-top pt-4 mt-auto">
                                <div class="text-muted small">
                                    <i class="fa-regular fa-clock mr-1"></i> Soumis officiellement le <b>{{ reclamation.date ? reclamation.date|date('d F Y à H:i') : '-' }}</b>
                                </div>
                                {{ include('reclamation/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
.icon-circle-sm {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
}
.bg-primary-light { background: rgba(0, 242, 96, 0.1); }
.alert-success-soft { background: rgba(0, 242, 96, 0.05); color: #008a44; }
.alert-warning-soft { background: rgba(255, 193, 7, 0.05); color: #a67c00; }
.letter-spacing-1 { letter-spacing: 1px; }
.shadow-inner { box-shadow: inset 0 2px 4px rgba(0,0,0,0.03); }
</style>
{% endblock %}

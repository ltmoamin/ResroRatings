{% extends 'back.html.twig' %}

{% block title %}Nouveau Plat{% endblock %}

{% block body %}
<div class="fils">
    <div class="content-header px-0">
        <div class="container-fluid">
            <div class="row mb-4 align-items-center">
                <div class="col-sm-6">
                    <h1 class="m-0 text-primary-p">
                        <i class="fa-solid fa-plus-circle mr-3"></i>Ajouter un Plat
                    </h1>
                    <p class="text-muted mt-2">Enregistrez une nouvelle création culinaire dans votre base de données.</p>
                </div>
                <div class="col-sm-6 text-right">
                    <a href="{{ path('app_plat_index') }}" class="btn btn-outline-secondary shadow-sm" style="border-radius: 10px;">
                        <i class="fa-solid fa-arrow-left mr-2"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid px-0">
            <div class="card card-premium-admin shadow-lg" style="max-width: 1000px; margin: 0 auto;">
                <div class="card-header border-0 bg-transparent">
                    <h3 class="card-title text-primary-p font-weight-bold">Détails de la Création</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    {{ include('plat/_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% extends 'front.html.twig' %}

{% block title %}Modifier mon Avis - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <a href="{{ path('app_avis_indexFront') }}">Avis</a> / <span>Modifier</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-pen-to-square text-figma-green me-3"></i>
            Modifier votre Avis
        </h1>
        <p class="page-subtitle">Mettez à jour votre témoignage pour refléter votre expérience actuelle</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-premium">
                    <div class="mb-4">
                        <h3 class="fw-bold h4">Détails de l'avis</h3>
                        <p class="text-muted small">Vous pouvez modifier le titre et le contenu de votre avis.</p>
                    </div>

                    {{ include('avis/_form.html.twig') }}

                    <div class="mt-4 pt-4 border-top d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_avis_indexFront') }}" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left me-1"></i> Retour à la liste
                        </a>
                        {{ include('avis/_delete_formFront.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

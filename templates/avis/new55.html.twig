{% extends 'front.html.twig' %}

{% block title %}Donner mon Avis - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <a href="{{ path('app_avis_indexFront') }}">Avis</a> / <span>Nouveau</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-pen-fancy text-figma-green me-3"></i>
            Partagez votre Expérience
        </h1>
        <p class="page-subtitle">Votre avis aide les autres à choisir le meilleur restaurant</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="form-premium">
                    <div class="mb-4">
                        <h3 class="fw-bold h4">Détails de votre avis</h3>
                        <p class="text-muted small">Racontez-nous ce que vous avez pensé de votre repas.</p>
                    </div>

                    {{ include('avis/_form.html.twig') }}

                    <div class="mt-4 text-center">
                        <a href="{{ path('app_avis_indexFront') }}" class="text-muted text-decoration-none small">
                            <i class="fa-solid fa-arrow-left me-1"></i>
                            Retour aux avis
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

<form method="post" action="{{ path('app_avis_deleteFront', {'id': avi.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avi.id) }}">
    <button class="btn-danger-premium btn-sm-premium" title="Supprimer">
        <i class="fa-solid fa-trash"></i>
    </button>
</form>

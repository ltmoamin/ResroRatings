{% extends 'front.html.twig' %}

{% block title %}Détails de l'Avis - RestoRatings{% endblock %}

{% block body %}
<!-- Page Hero -->
<section class="page-hero">
    <div class="container">
        <nav class="page-breadcrumb" aria-label="breadcrumb">
            <a href="{{ path('home_Front') }}">Accueil</a> / <a href="{{ path('app_avis_indexFront') }}">Avis</a> / <span>Détails</span>
        </nav>
        <h1 class="page-title">
            <i class="fa-solid fa-comment-dots text-figma-green me-3"></i>
            Avis de {{ avi.user.username }}
        </h1>
        <p class="page-subtitle">Consultez les détails et les commentaires sur ce restaurant</p>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="panel-premium">
                    <div class="d-flex align-items-center gap-4 mb-4 pb-4 border-bottom">
                        <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=120&h=120&fit=crop&q=80" 
                             alt="{{ avi.user.username }}" 
                             class="rounded-circle border border-4 border-figma-green"
                             style="width: 80px; height: 80px; object-fit: cover;">
                        <div>
                            <h3 class="fw-bold mb-1">{{ avi.titreavis }}</h3>
                            <div class="text-muted small">
                                <i class="fa-solid fa-calendar-alt me-1"></i> Publié le {{ avi.dateavis|date('d/m/Y') }}
                                <span class="mx-2">•</span>
                                <i class="fa-solid fa-eye me-1"></i> {{ avi.nbVue }} vues
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="review-stars mb-3 fs-5">
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-solid fa-star text-warning"></i>
                            <i class="fa-regular fa-star text-warning"></i>
                        </div>
                        <p class="lead text-dark lh-sm" style="font-style: italic; background: var(--gray-50); padding: var(--space-5); border-radius: var(--radius-lg);">
                            "{{ avi.pubavis }}"
                        </p>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                        <a href="{{ path('app_avis_indexFront') }}" class="btn-outline-premium">
                            <i class="fa-solid fa-arrow-left me-2"></i> Retour aux avis
                        </a>
                        
                        {% if app.user and app.user.iduser == avi.user.getIduser() %}
                            <div class="d-flex gap-3">
                                <a href="{{ path('app_avis_editFront', {'id': avi.id}) }}" class="btn-warning-premium">
                                    <i class="fa-solid fa-pen me-2"></i> Modifier
                                </a>
                                {{ include('avis/_delete_formFront.html.twig') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
